    grep -q "^ssl_ciphers=" /etc/vsftpd.conf || echo "ssl_ciphers=HIGH" >> /etc/vsftpd.conf
    if command -v apt &> /dev/null; then
      ufw allow 20/tcp
      ufw allow 21/tcp
    fi
    if command -v dnf &> /dev/null; then
